using System;
using System.Windows.Forms;

namespace Cinema
{
public partial class Ticket : UserControl
{
public int TicketId { get; set; }

    public Ticket()
    {
        InitializeComponent();
    }

    public void Fill(string movieTitle, string status, string seat, DateTime sessionTime, decimal price, DateTime orderDate)
    {
        lblTitle.Text = movieTitle;
        lblStatus.Text = status;
        lblSeat.Text = seat;
        lblSessionTime.Text = sessionTime.ToString("dd.MM.yyyy HH:mm");
        lblPrice.Text = price.ToString("N2") + " руб.";
        lblOrderDate.Text = "Заказ от: " + orderDate.ToString("dd.MM.yyyy HH:mm");

        // Меняем цвет статуса
        switch (status)
        {
            case "Оплачен":
            case "Подтвержден":
                lblStatus.ForeColor = System.Drawing.Color.Green;
                break;
            case "Отменен":
                lblStatus.ForeColor = System.Drawing.Color.Red;
                break;
            default:
                lblStatus.ForeColor = System.Drawing.Color.Orange;
                break;
        }
    }
}
}
